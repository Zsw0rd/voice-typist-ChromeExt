{
  "manifest_version": 3,
  "name": "Voice Assistant Anywhere",
  "version": "1.0.3",
  "description": "Push-to-talk dictation and Gemini AI replies in any input or editor.",
  "permissions": ["storage"],
  "background": { "service_worker": "background.js" },
  "options_page": "options.html",
  "action": { "default_popup": "popup.html", "default_title": "Voice Assistant" },
  "icons": { "16": "icons/16.png", "48": "icons/48.png", "128": "icons/128.png" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["common.js", "content.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
